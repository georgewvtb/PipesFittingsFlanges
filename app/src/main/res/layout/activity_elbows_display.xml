<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".elbowsDisplay">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_horizontal|center_vertical"
            android:text="Nominal Size (mm)"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/elbowsNominalSize"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:gravity="center_horizontal|center_vertical"
            android:text="TextView"
            android:textSize="20sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="26dp" />

        <TextView
            android:id="@+id/TextView2"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:gravity="center_horizontal|center_vertical"
            android:text="Schedule"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/schedule"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:gravity="center_horizontal|center_vertical"
            android:text="TextView"
            android:textSize="20sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="32dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_horizontal|center_vertical"
            android:text="Outside Diameter (mm)"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/elbowsOutsideDiameter"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:gravity="center_horizontal|center_vertical"
            android:text="TextView"
            android:textSize="20sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="26dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_horizontal|center_vertical"
            android:text="Center To End (mm)"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/elbowsCenterToEnd"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:gravity="center_horizontal|center_vertical"
            android:text="TextView"
            android:textSize="20sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="26dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_horizontal|center_vertical"
            android:text="Internal Diameter (mm)"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/elbowsInternalDiameter"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:gravity="center_horizontal|center_vertical"
            android:text="TextView"
            android:textSize="20sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="26dp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_horizontal|center_vertical"
            android:text="Wall Thickness (mm)"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/elbowsWallThickness"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:gravity="center_horizontal|center_vertical"
            android:text="TextView"
            android:textSize="20sp" />



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>