<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".flangesNomSizeTableDisplay">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Space
            android:layout_width="match_parent"
            android:layout_height="69dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_horizontal|center_vertical"
            android:text="Nominal Size (mm)"
            android:textStyle="bold"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/flangesNomSizeTableNominalSize"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:gravity="center_horizontal|center_vertical"
            android:text="TextView"
            android:textSize="20sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="26dp" />

        <TextView
            android:id="@+id/TextView2"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:gravity="center_horizontal|center_vertical"
            android:text="Table"
            android:textStyle="bold"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/flangesNomSizeTableTable"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:gravity="center_horizontal|center_vertical"
            android:text="TextView"
            android:textSize="20sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="32dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_horizontal|center_vertical"
            android:text="Thickness (mm)"
            android:textStyle="bold"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/flangesNomSizeTableThickness"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:gravity="center_horizontal|center_vertical"
            android:text="TextView"
            android:textSize="20sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="26dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_horizontal|center_vertical"
            android:text="Holes Number (mm)"
            android:textStyle="bold"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/flangesNomSizeTableHolesNumber"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:gravity="center_horizontal|center_vertical"
            android:text="TextView"
            android:textSize="20sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="26dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_horizontal|center_vertical"
            android:text="Holes Diameter (mm)"
            android:textStyle="bold"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/flangesNomSizeTableHolesDiameter"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:gravity="center_horizontal|center_vertical"
            android:text="TextView"
            android:textSize="20sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="26dp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_horizontal|center_vertical"
            android:text="PCD (mm)"
            android:textStyle="bold"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/flangesNomSizeTablePCD"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:gravity="center_horizontal|center_vertical"
            android:text="TextView"
            android:textSize="20sp" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>