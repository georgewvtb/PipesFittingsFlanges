<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PipesDisplay">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Space
            android:layout_width="match_parent"
            android:layout_height="96dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_horizontal|center_vertical"
            android:text="Nominal Bore (mm)"
            android:textStyle="bold"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/pipesNominalBore"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:gravity="center_horizontal|center_vertical"
            android:text="TextView"
            android:textSize="20sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="26dp" />

        <TextView
            android:id="@+id/TextView2"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:gravity="center_horizontal|center_vertical"
            android:text="Schedule"
            android:textStyle="bold"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/schedule"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:gravity="center_horizontal|center_vertical"
            android:text="TextView"
            android:textSize="20sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="32dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_horizontal|center_vertical"
            android:text="Outside Diameter (mm)"
            android:textStyle="bold"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/pipesOutsideDiameter"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:gravity="center_horizontal|center_vertical"
            android:text="TextView"
            android:textSize="20sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="26dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_horizontal|center_vertical"
            android:text="Wall Thickness (mm)"
            android:textStyle="bold"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/pipesWallThickness"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:gravity="center_horizontal|center_vertical"
            android:text="TextView"
            android:textSize="20sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="26dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_horizontal|center_vertical"
            android:text="Internal Diameter (mm)"
            android:textStyle="bold"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/pipesInternalDiameter"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:gravity="center_horizontal|center_vertical"
            android:text="TextView"
            android:textSize="20sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>